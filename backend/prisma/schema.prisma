// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?
  fullName  String
  role      String   // PEDIDOR, ADMINISTRACION, VALIDADOR, ADMIN
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  solPedsCreated     SolPed[]      @relation("CreatedBy")
  comments           Comment[]
  todosCreated       Todo[]        @relation("TodoCreatedBy")
  todosAssigned      Todo[]        @relation("TodoAssignedTo")
  history            History[]
  notificationsCreated Notification[] @relation("NotificationCreatedBy")
  notificationsFor   Notification[] @relation("NotificationFor")

  @@map("users")
}

model Area {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  solPeds SolPed[]

  @@map("areas")
}

model Unit {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  symbol    String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  items SolPedItem[]

  @@map("units")
}

model SolPed {
  id              String        @id // Formato: SP-YYYY-000123
  status          String        @default("BORRADOR") // BORRADOR, ENVIADA_ADMINISTRACION, etc.
  priority        String        @default("MEDIA") // BAJA, MEDIA, ALTA, URGENTE

  // Datos del solicitante
  createdById     Int
  createdBy       User          @relation("CreatedBy", fields: [createdById], references: [id])
  areaId          Int?
  area            Area?         @relation(fields: [areaId], references: [id])

  // Fechas
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  neededBy        DateTime?

  // Detalles de la solicitud
  workOrder       String?       // OT/Orden de trabajo
  justification   String?
  observations    String?

  // Datos de compra (llenados por Administración)
  supplier        String?
  supplierContact String?
  conditions      String?       // Condiciones de entrega, pago, etc.
  totalPrice      Float?
  currency        String?       @default("ARS")
  quotationDate   DateTime?
  quotationFile   String?       // Ruta al archivo de cotización

  // Orden de Compra
  purchaseOrder   String?       // Número de OC
  purchaseDate    DateTime?
  estimatedDelivery DateTime?
  receivedDate    DateTime?

  // Motivo de rechazo (si aplica)
  rejectionReason String?

  // Relaciones
  items           SolPedItem[]
  comments        Comment[]
  todos           Todo[]
  history         History[]
  attachments     Attachment[]
  notifications   Notification[]

  @@map("solpeds")
}

model SolPedItem {
  id              Int      @id @default(autoincrement())
  solPedId        String
  solPed          SolPed   @relation(fields: [solPedId], references: [id], onDelete: Cascade)

  quantity        Float
  unitId          Int
  unit            Unit     @relation(fields: [unitId], references: [id])

  name            String
  specification   String?
  brand           String?
  suggestedLink   String?
  observations    String?

  // Precio por item (opcional, cargado por Administración)
  unitPrice       Float?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("solped_items")
}

model Comment {
  id        Int      @id @default(autoincrement())
  solPedId  String
  solPed    SolPed   @relation(fields: [solPedId], references: [id], onDelete: Cascade)

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  text      String
  createdAt DateTime @default(now())

  @@map("comments")
}

model Todo {
  id          Int      @id @default(autoincrement())
  solPedId    String
  solPed      SolPed   @relation(fields: [solPedId], references: [id], onDelete: Cascade)

  text        String
  completed   Boolean  @default(false)
  dueDate     DateTime?

  createdById Int
  createdBy   User     @relation("TodoCreatedBy", fields: [createdById], references: [id])

  assignedToId Int?
  assignedTo   User?    @relation("TodoAssignedTo", fields: [assignedToId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("todos")
}

model History {
  id            Int      @id @default(autoincrement())
  solPedId      String
  solPed        SolPed   @relation(fields: [solPedId], references: [id], onDelete: Cascade)

  userId        Int
  user          User     @relation(fields: [userId], references: [id])

  previousStatus String?
  newStatus      String?
  action        String   // Descripción de la acción
  notes         String?  // Motivo, si aplica

  createdAt     DateTime @default(now())

  @@map("history")
}

model Notification {
  id          Int      @id @default(autoincrement())
  solPedId    String
  solPed      SolPed   @relation(fields: [solPedId], references: [id], onDelete: Cascade)

  forUserId   Int
  forUser     User     @relation("NotificationFor", fields: [forUserId], references: [id])

  createdById Int
  createdBy   User     @relation("NotificationCreatedBy", fields: [createdById], references: [id])

  message     String
  read        Boolean  @default(false)
  type        String   // NEW, STATUS_CHANGE, COMMENT, etc.

  createdAt   DateTime @default(now())

  @@map("notifications")
}

model Attachment {
  id          Int      @id @default(autoincrement())
  solPedId    String
  solPed      SolPed   @relation(fields: [solPedId], references: [id], onDelete: Cascade)

  filename    String
  originalName String
  path        String
  mimeType    String
  size        Int

  uploadedAt  DateTime @default(now())

  @@map("attachments")
}
